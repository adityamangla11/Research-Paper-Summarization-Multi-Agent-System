# Environment Variables for Research Paper Summarization System
# Copy this file to .env and fill in your actual values

# ElevenLabs API Key for text-to-speech generation
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI API Key (if you want to integrate OpenAI for summarization)
OPENAI_API_KEY=your_openai_api_key_here

# Database connection (if you implement PostgreSQL integration)
DATABASE_URL=postgresql://username:password@localhost:5432/research_papers

# Application settings
DEBUG=True
LOG_LEVEL=INFO
